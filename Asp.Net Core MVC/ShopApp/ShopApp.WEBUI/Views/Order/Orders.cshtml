@model List<OrderListModel>



<h1>Siparişleriniz</h1>
<hr />

@foreach (var order in Model)
{

    <table class="table table-bordered table-sm mb-3">
        <thead class="bg-primary">
        <tr>
        <td colspan="2">Sipariş No: #@order.OrderId</td>
        <th>Fiyat</th>
        <th>Miktar</th>
        </tr>
        </thead>
    <tbody>
@foreach (var orderItem in order.OrderItems)
{
        <tr>
        <td><img src="~/img/@orderItem.ImageUrl" width="80" /></td>
        <td>@orderItem.Name</td>
        <td>@orderItem.Price</td>
        <td>@orderItem.Quantity</td>
        </tr>
}
                </tbody>
                <tfoot>
                <tr>
                <td colspan="2">Müşteri Adı:</td>
                <td>@order.FirstName @order.LastName</td>
                <td rowspan="5">Total: @order.TotalPrice().ToString("c")</td>
                </tr>
                <tr>
                <td colspan="2">Adres:</td>
                <td>@order.Address</td>
                </tr>
                <tr>
                <td colspan="2">Mail:</td>
                <td>@order.Email</td>
                </tr>
                <tr>
                <td colspan="2">Telefon:</td>
                <td>@order.Phone</td>
                </tr>
                <tr>
                <td colspan="2">Sipariş Tarihi:</td>
                <td>@order.OrderDate</td>
                </tr>

                
</tfoot>
</table>


}