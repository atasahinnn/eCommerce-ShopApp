@model IEnumerable<IdentityRole>

<div class="row">
    <div class="col-md-12">
        <h1 style="color:darkslategrey; text-align:center;">Üye Tipi Listesi</h1>
        <hr />
        <a class="btn btn-primary btn-lg" href="/admin/role/create">Rol Ekle</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td style="width: 250px;">Id</td>
                    <td></td>
                    <td style="width: 160px"></td>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a href="/admin/role/@item.Id" class="btn btn-primary btn-sm mr-2">Güncelle</a>

                        <form action="/admin/role/delete" method="post" style="display: inline;">
                            <input type="hidden" name="RoleId" value="@item.Id" />
                            <button type="submit" class="btn-danger btn-sm mr-2">Sil</button>
                        </form>
                    </td>
                </tr>
                    }
                }

                else
                {
                    <div class="alert alert-warning">
                        <h3>Kayıtlı Rol Yok.</h3>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>