@model ProductListViewModel

<div class="row">
    <div class="col-md-12">
        <h1 style="color:darkslategrey; text-align:center;">Admin Products</h1>
        <hr />
        <a class="btn btn-primary btn-lg" href="/admin/products/create">Ürün Ekle</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td style="width: 30px;">Id</td>
                    <td style="width: 100px;">Image</td>
                    <td>Name</td>
                    <td style="width: 20px;">Price</td>
                    <td style="width: 200px;"></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Products.Count > 0)
                {
                    @foreach (var item in Model.Products)
                    {
                        <tr>
                            <td>@item.ProductId</td>
                            <td><img src="~/img/@item.ImageUrl" width="80" /></td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>
                                <a href="/admin/products/@item.ProductId" class="btn btn-primary btn-sm mr-2">Güncelle</a>

                                <form action="/admin/deleteproduct" method="post" style="display: inline;">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <button type="submit" class="btn-danger btn-sm mr-2">Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                }

                else
                {
                    <div class="alert alert-warning">
                        <h3>Ürün Yok.</h3>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>