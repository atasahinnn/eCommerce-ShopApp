@model ProductModel


<h1 class="h3">Ürün Ekle</h1>
<hr />
<form asp-controller="Admin" asp-action="ProductCreate" method="post">

    <div class="row">
        <div class="col-md-8">
            <div class="row mb-3">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="Url" class="col-sm-2 col-form-label">Link Adress:</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Url" />
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label">Description:</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="ImageUrl" class="col-sm-2 col-form-label">Image URL:</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="ImageUrl" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="Price" class="col-sm-2 col-form-label">Price:</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" value="Save Product" class="btn btn-primary">KAYDET</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}