@model RoleModel

<h1 class="h3">Rol Ekle</h1>
<hr />


<form asp-controller="Admin" asp-action="RoleCreate" method="post">


    <div class="row">
        <div class="col-md-8">
            <div class="row mb-3">
                <label asp-for="Name" class="col-sm-2 col-form-label">Name:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" value="Rol Ekle" class="btn btn-primary">Rol Ekle</button>
                </div>
                </div>
            </div>
        </div>
    
</form>
