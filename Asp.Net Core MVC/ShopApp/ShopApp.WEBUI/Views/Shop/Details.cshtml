@model ProductDetailModel

<div class="card mb-3">
    <div class="card-body">
        <div class="row no-gutters">
            <div class="col-md-2">
                <img class="card-img" src="~/img/@Model.Product.ImageUrl" />
            </div>
            <div class="col-md-9 m-4">
                <h1 class="card-text">@Model.Product.Name</h1>

                <h3 class="card-text"><i class="fas fa-lira-sign"></i>@Model.Product.Price</h3>

                <h4 class="card-text">@Html.Raw(Model.Product.Description)</h4>

                @foreach (var c in Model.Categories)
                {
                    <a asp-controller="shop" asp-action="list" asp-route-category="@c.Url" class="btn btn-link p-0 mb-3">@c.Name</a>
                }

                <form asp-controller="Cart" asp-action="AddToCart" method="post" class="form-inline">
                    <input type="hidden" name="productId" value="@Model.Product.ProductId" />
                    <div class="input-group mb-3">
                        <input type="number" name="quantity" class="form-control" value="1" min="1" step="1" style="width:100px;" />
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary ml-3">
                                <i class="fas fa-cart-plus"> Sepete Ekle</i>
                            </button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
